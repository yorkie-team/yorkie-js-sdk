{
  "name": "yorkie-js",
  "version": "0.0.0",
  "private": true,
  "description": "A collection of tools and examples for Yorkie",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "build:examples": "pnpm --filter './examples/*' run build",
    "build:packages": "pnpm --filter './packages/*' run build",
    "lint": "eslint . --fix --max-warnings=0 --flag v10_config_lookup_from_file",
    "sdk": "pnpm --filter=@yorkie-js/sdk",
    "devtools": "pnpm --filter=@yorkie-js/devtools",
    "react": "pnpm --filter=@yorkie-js/react",
    "schema": "pnpm --filter=@yorkie-js/schema",
    "vanilla-codemirror6": "pnpm --filter=vanilla-codemirror6",
    "vanilla-quill": "pnpm --filter=vanilla-quill",
    "vanilla-document-limit": "pnpm --filter=vanilla-document-limit",
    "profile-stack": "pnpm --filter=profile-stack",
    "simultaneous-cursors": "pnpm --filter=simultaneous-cursors",
    "react-tldraw": "pnpm --filter=react-tldraw",
    "react-flow": "pnpm --filter=react-flow",
    "react-document-limit": "pnpm --filter=react-document-limit",
    "react-todomvc": "pnpm --filter=react-todomvc",
    "nextjs-scheduler": "pnpm --filter=nextjs-scheduler",
    "nextjs-todolist": "pnpm --filter=nextjs-todolist",
    "nextjs-presence": "pnpm --filter=nextjs-presence",
    "vuejs-kanban": "pnpm --filter=vuejs-kanban"
  },
  "keywords": [],
  "author": {
    "name": "hackerwins",
    "email": "susukang98@gmail.com"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-plugin-jsdoc": "^61.4.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "only-allow": "^1.2.2",
    "typescript-eslint": "^8.48.1"
  }
}
