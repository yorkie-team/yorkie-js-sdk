{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "outDir": "./lib",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@yorkie-js/sdk": ["../sdk/src/yorkie.ts"],
      "@yorkie-js/sdk/src/*": ["../../packages/sdk/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["src/prosemirror-prototype.ts", "src/prosemirror-example.ts"]
}
