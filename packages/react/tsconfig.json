{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "outDir": "./lib",

    /* Bundler mode */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@yorkie-js-sdk/src/*": ["../../packages/sdk/src/*"]
    }
  },
  "include": ["src"]
}
