{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": ["*"]
}
