{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2019",
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@yorkie-js-sdk/src/*": ["src/*"],
      "@yorkie-js-sdk/test/*": ["test/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types"]
}
